{
  "name": "surveva-backend",
  "version": "1.0.0",
  "description": "Survey collection app",
  "scripts": {
    "test": "jest --watchAll",
    "start": "node ./dist/index.js",
    "compile:watch": "tsc --build --watch",
    "pre:dev": "cross-env NODE_ENV=development nodemon --experimental-modules --es-module-specifier-resolution=node dist/index.js",
    "dev": "concurrently --kill-others \"yarn compile:watch\" \"yarn pre:dev\"",
    "build": "rimraf ./dist && tsc"
  },
  "author": "Ryan Njoroge",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.16.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.4.5",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "nodemon": "^3.1.4",
    "openai": "^4.55.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "rimraf": "^5.0.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tozod": "^3.0.0",
    "winston": "^3.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.3"
  }
}
