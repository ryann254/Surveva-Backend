{
	"compilerOptions": {
			"lib": ["es6"],
			"esModuleInterop": true,
			"strictNullChecks": true,
			"skipLibCheck": true,
			"outDir": "./dist"
		},
	"include": [
		"config/**/*",
		"controllers/**/*",
		"errors/**/*",
		"middleware/**/*",
		"mongodb/**/*",
		"packages/**/*",
		"routes/**/*",
		"services/**/*",
		"utils/**/*",
		"app.ts",
		"index.ts",
		"jest.setup.ts"
	]
}
